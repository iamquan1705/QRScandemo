<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.camera.view.PreviewView
            android:id="@+id/prView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/imgImageAfter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgCamera"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_centerInParent="true"
                android:background="@drawable/icon_camera" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_below="@+id/imgCamera"
                android:layout_alignStart="@id/imgCamera"
                android:layout_alignEnd="@id/imgCamera"
                android:layout_marginTop="@dimen/margin_10dp"
                android:background="@color/background"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgLibrary"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/icon_logo" />

                <ImageView
                    android:id="@+id/imgRotateCamera"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/icon_logo" />

                <ImageView
                    android:id="@+id/imgFlash"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/icon_logo" />
            </LinearLayout>
        </RelativeLayout>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>